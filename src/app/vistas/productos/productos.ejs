<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Sistema productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body class="bg-light text-black"">
    <div class="container">
        <div class="row">
            <div class="col">
                <h3 class="card-title"> Productos registrados</h3>
                <table class="table table-dark table-striped table-sm align-middle">
                    <tr class="align-top">
                        <th>Codigo producto</th>
                        <th>Nombre producto</th>
                        <th>Descripción producto</th>
                    
                        <th>Precio</th>
                        <th>Fecha de registro</th>
                        <th>Fecha de modificación</th>
                        <th>Accion</th>
                    </tr>
                    <% for(var i=0 ; i < productos.length ; i++) { %>
                        <tr>
                            <td><%=productos[i].id_producto%></td>
                            <td><%=productos[i].p_nombre%></td>
                            <td><%=productos[i].p_descripcion%></td>
                            <td>$<%=productos[i].p_precio%></td>
                            <td><%=productos[i].p_fregistro.toDateString()%></td>
                            <td><%=productos[i].p_fupdate%></td>
                            <td>
                                <a href="/eliminar/<%=productos[i].id_producto%>" class="btn btn-danger" onclick=" return confirm ('¿Eliminar registro?')>E</a>
                                <a href="/editar/<%=productos[i].id_producto%>" class="btn btn-info">M</a>
                            </td>
                        </tr>
                    <% } %>
                </table>
            </div>
        <div class="col">
                <form action="/productos" method="post" >
                    <h3 class="card-title">Ingresar producto</h3>
                    <div class="form-group">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="p_nombre" id="floatingInput" placeholder="">
                            <label for="floatingInput">Nombre producto</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="p_descripcion" id="floatingInput" placeholder="">
                            <label for="floatingInput">Descripción producto</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" name="p_preci" id="floatingInput" placeholder="">
                            <label for="floatingInput">Precio producto</label>
                        </div>
 
                        <input type="submit" class="btn btn-primary" >
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
